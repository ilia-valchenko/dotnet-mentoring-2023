@using IdentityServer.ViewModels
@model RegisterViewModel

<h1>Registration</h1>

<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>Username</label>
        <input asp-for="Username" />
        <span style="color: red;" asp-validation-for="Username"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span style="color: red;" asp-validation-for="Password"></span>
    </div>
    <div>
        <label>Confirm password</label>
        <input asp-for="ConfirmPassword" />
        <span style="color: red;" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>

<a asp-controller="Auth" asp-action="Login"
   asp-route-returnUrl="@Model.ReturnUrl">Back to Login</a>